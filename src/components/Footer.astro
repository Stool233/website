---
import siteConfig from "../site-config";
---

<footer class="w-full px-6 py-10 max-w-3xl mx-auto border-t border-slate-200/80 dark:border-slate-700/50">
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-4">
      {
        siteConfig.footerNavLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-ink-tertiary dark:text-ink-dark-tertiary hover:text-ink dark:hover:text-ink-dark transition-colors"
          >
            {link.text}
          </a>
        ))
      }
      <a
        href="/rss.xml"
        class="text-sm text-ink-tertiary dark:text-ink-dark-tertiary hover:text-ink dark:hover:text-ink-dark transition-colors"
      >
        RSS
      </a>
    </div>
    <p class="text-xs text-ink-tertiary dark:text-ink-dark-tertiary">
      &copy; {new Date().getFullYear()} {siteConfig.author}
    </p>
  </div>
</footer>
